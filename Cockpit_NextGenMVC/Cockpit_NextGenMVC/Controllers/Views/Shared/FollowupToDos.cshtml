@model  IEnumerable<Cockpit_NextGenMVC.BAL.VW_Catagory_Followups>
<div class="box black span4 noMargin" ontablet="span12" ondesktop="span4">
    <div class="box-header">
        <h2>
            <i class="halflings-icon white check"></i><span class="break"></span>To Do List</h2>
        <div class="box-icon">
            <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a><a
                href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i>
            </a>
        </div>
    </div>
    <div class="box-content">
        <div class="todo metro">
            <ul class="todo-list">
                @{foreach (var item in Model)
                  {
                      if (item.Todays_Status == "PassedDueDate")
                      {
                    <li class="orange"><a class="action icon-check-empty" href="#"></a>
                        <strong style="color:Red;">Order : @item.Sales_Order </strong> Status - @item.Todays_Status<br />
                        Action : @item.Description - Due by - @item.DueDate.Value.ToShortDateString() <br />
                        Customer : @item.CustomerName <br />
                        Comment - @item.Comment
                    </li>      
                      }
                      else if (item.Todays_Status == "DueToday")
                      {
                    <li class="orange"><a class="action icon-check-empty" href="#"></a>
                        <strong style="color:Green;">Order : @item.Sales_Order </strong> Status - @item.Todays_Status<br />
                        Action : @item.Description - Due by - @item.DueDate.Value.ToShortDateString() <br />
                        Customer : @item.CustomerName <br />
                        Comment - @item.Comment
                    </li>      
                      }
                      else if (item.Todays_Status == "ReasignedtoYou")
                      {
                    <li class="orange"><a class="action icon-check-empty" href="#"></a>
                       <strong style="color:Blue;">Order : @item.Sales_Order </strong> Status - @item.Todays_Status<br />
                        Action : @item.Description - Due by - @item.DueDate.Value.ToShortDateString() <br />
                        Customer : @item.CustomerName <br />
                        Comment - @item.Comment
                    </li>      
                      }
                      else if (item.Todays_Status == "OpenFollowup")
                      {
                    <li class="orange"><a class="action icon-check-empty" href="#"></a>
                        <strong style="color:Green;">Order : @item.Sales_Order </strong> Status - @item.Todays_Status<br />
                        Action : @item.Description - Due by - @item.DueDate.Value.ToShortDateString() <br />
                        Customer : @item.CustomerName <br />
                        Comment - @item.Comment
                    </li>      
                      }
                  }
                }
            </ul>
        </div>
    </div>
</div>
