<div class="box box-info" style="position: relative;">
<div class="box-header ui-sortable-handle" style="cursor: move;">
    <i class="fa fa-envelope"></i>
    <h3 class="box-title">Quick Email Follow-up</h3>
</div>
<div class="box-body">
    <form action="@Url.Action("PushFollowup","Followup")" method="post">
    <div class="form-group">
        <input name="emailto" class="form-control" type="email" placeholder="Email to:">
    </div>
    <div class="form-group">
        <input name="subject" class="form-control" type="text" placeholder="Subject">
    </div>
    <div>
        <textarea name="Body" id="Body" class="textarea" placeholder="Message">Message</textarea>
    </div>
    </form>
</div>
<div class="box-footer clearfix">
    <button class="pull-right btn btn-default" id="sendEmail">Send <i class="fa fa-arrow-circle-right"></i></button>
</div>
</div>