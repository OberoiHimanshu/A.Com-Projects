@{
    ViewBag.Title = "UserSessionExpired";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
       
}
  
    
    @using (Ajax.BeginForm("UserLogin", "User", FormMethod.Post, new AjaxOptions { HttpMethod = "post" }, new { id = "frmUserLogin" }))
    {
    <!-- Automatic element centering -->
    <div class="lockscreen-wrapper">
      

      <!-- START LOCK SCREEN ITEM -->
      <div class="lockscreen-item">
        <!-- lockscreen image -->
        
          
        <!-- /.lockscreen-image -->

        <!-- lockscreen credentials (contains the form) -->
        <form class="lockscreen-credentials text-center">
          <div class="input-group">
            <!-- User name -->
            <table>
            <tr>
            <td><img src="../Content/Img/Lock.png" alt="Session Expired" style="width:100px;height:100px;"/>
            </td>
            <td><h3>Session Expired</h3> @User.Identity.Name.ToString()</td>
            </tr>
            <tr>
            <td colspan="2">
            <div class="input-group-btn text-center">
              <button class="btn" title="Click Here to Login again"><i class="fa fa-arrow-right text-muted"></i></button>
            </div>
            </td></tr>
            </table>
            
          </div>
        </form><!-- /.lockscreen credentials -->

      </div><!-- /.lockscreen-item -->
      <div class="help-block text-center">
        Login again to retrieve your session
      </div>
      <div class='text-center'>
        <a href="@Url.Action("UserLogin", "User")">Or sign in as a different user</a>
      </div>
      <div class='lockscreen-footer text-center'>
        <strong>Copyright &copy; 2015-2016 <a href="#">Agilent Technologies</a>.</strong><br />
        All rights reserved
      </div>
    </div>
    <!-- /.center -->
    }


    
    

