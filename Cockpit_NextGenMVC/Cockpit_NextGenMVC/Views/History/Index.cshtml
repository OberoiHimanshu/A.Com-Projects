@model List<Cockpit_NextGenMVC.BAL.Tbl_Archives>
@{
    ViewBag.Title = "ArchivesList";
}
<div class="content-wrapper">
    <section class="content-header">
    <h1>
        MEC Archives List
        </h1>
        <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="halflings-icon home"></i>Home</a></li>
        <li><a href="#"><i class="halflings-icon cog"></i>@ViewBag.Title</a></li>
        </ol>
   </section>
    <section class="content">
    <div class="row">
    <div class="col-xs-12">
    <div class="box">
    <div id="content" class="span11" style="min-height: 939px;">
        <table>
            <tr>
                <th style="width:100px;">
                    Archive date
                </th>
                <th style="width:100px;">
                    Month
                </th>
                <th style="width:200px;">
                    Report Name
                </th>
                <th style="width:200px;">
                    Report Path
                </th>
                <th style="width:100px;">
                    Year
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArchiveDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Month)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReportName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Report_Path)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.ActionLink("Download", "Download", new { ReportPath = item.Report_Path })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

   </div>
    </div>
    </section>
</div>
