<div id="example">
    <div class="demo-section k-content">
        <div id="chart"></div>
    </div>
    <script>
        var cashFlowData = [{
            period: "June End\nProjection",
            amount: 5
        }, {
            period: "WK 1",
            amount: 7
        }, {
            period: "WK 2",
            amount: 4
        }, {
            period: "WK 3",
            amount: -2
        }, {
            period: "WK 4",
            amount: 3
        }, {
            period: "July",
            summary: "runningTotal"
        }, {
            period: "WK 5",
            amount: -2
        }, {
            period: "WK 9",
            amount: -1
        }, {
            period: "WK 3",
            amount: 1
        }, {
            period: "WK 8",
            amount: 3
        }, {
            period: "August\nBalance",
            summary: "total"
        }];

        function createChart() {
            $("#chart").kendoChart({
                dataSource: {
                    data: cashFlowData
                },
                title: {
                    text: "SNI Invoicing Projection"
                },
                legend: {
                    visible: false
                },
                series: [{
                    type: "waterfall",
                    field: "amount",
                    categoryField: "period",
                    summaryField: "summary",
                    color: function (point) {
                        var summary = point.dataItem.summary;
                        if (summary) {
                            return summary == "total" ? "#555" : "gray";
                        }

                        if (point.value > 0) {
                            return "green";
                        } else {
                            return "red";
                        }
                    },
                    labels: {
                        visible: true,
                        format: "C0",
                        position: "insideEnd"
                    }
                }],
                valueAxis: {
                    labels: {
                        format: "C0"
                    }
                }
            });
        }

        $(document).ready(createChart);
        $(document).bind("kendo:skinChange", createChart);
    </script>
</div>
