@model Cockpit_NextGenMVC.BAL.VW_USERS
@{
    var RolesList = ViewBag.RolesList;
    Cockpit_NextGenMVC.BAL.VW_USERS SessionUSer = (Cockpit_NextGenMVC.BAL.VW_USERS)Session["UserProfile"];
    var Role = SessionUSer.ROLE_DESC;
    var NTLogin = SessionUSer.NTLOGIN;
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<div class="login-box-body">
        <p class="login-box-msg" style="text-align:justify;">YOU ACKNOWLEDGE THAT, BY OPENING OR RUNNING THIS APPLICATION, YOU WILL HAVE ACCESS
                    TO CONFIDENTIAL PERSONAL DATA, YOU AGREE TO MAINTAIN THE CONFIDENTIALITY OF SUCH
                    DATA AND YOU MAY NOT DISCLOSE OR TRANSFER THE DATA TO ANY FELLOW EMPLOYEE, MANAGER,
                    THIRD PARTY OR FURTHER COUNTRY. IN ADDITION YOU MAY ONLY USE THE PERSONAL DATA FOR
                    FULFILLING THE SPECIFIC BUSINESS PURPOSE OF THE APPLICATION, AND THE EXPORT OF PERSONAL
                    DATA SHOULD NOT BE USED IN A WAY INCOMPATIBLE WITH THOSE PURPOSES AND LIMITS. EXPORTED
                    DATA IS TO BE DELETED IMMEDIATELY AFTER ITS USE. YU WILL ALSO AGREE TO OBSERVE ALL
                    APPLICABLE DATA PROTECTION LAWS.</p>
        <form action="@Url.Action("Index", "Home")" method="post">
          <div class="form-group">
            <div class="col-sm-4" style="border:1px solid white; text-align:left; font-weight:bold;">
                NT Login : 
            </div>
            <div class="col-sm-8" style="border:1px solid white; text-align:left; font-weight:normal;">
                <input type="text" value="@NTLogin" name="ntlogin" id="ntlogin" />
                
            </div>
          </div>
          <div class="form-group">
           <div class="col-sm-4" style="border:1px solid white; text-align:left; font-weight:bold;">
                Role : 
            </div>
            <div class="col-sm-8" style="border:1px solid white; text-align:left; font-weight:normal;">
                @(Html.Kendo().ComboBox()
                                  .Name("Role")
                                  .Placeholder("Select size...")
                                  .BindTo(new List<string>() {
                                      "CSR",
                                      "Supervisor",
                                      "Regional Lead",
                                      "BPA",
                                      "WW Lead",
                                      "Admin"
                                  })
                                  .SelectedIndex(0)
                                  .HtmlAttributes(new { style = "width:200px;" })
                                  .Suggest(true)
                                  .Value(Role)
                                  )
            </div>
          </div>
          <div class="row">
            <div class="col-xs-8">
              
            </div><!-- /.col -->
            <div class="col-xs-4">
              <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div><!-- /.col -->
          </div>
        </form>

        
        If you are a new user,<a href="@Url.Action("UserRegistration", "User")" class="text-center"> New User Registration</a>

      </div>

