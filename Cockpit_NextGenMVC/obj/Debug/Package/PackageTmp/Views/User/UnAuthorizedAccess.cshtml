@{
    ViewBag.Title = "UnAuthorizedAccess";
    Cockpit_NextGenMVC.BAL.VW_USERS SessionUSer = (Cockpit_NextGenMVC.BAL.VW_USERS)Session["UserProfile"];
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    
}

    


    <!-- Main content -->
        <section class="content">

          <div class="error-page">
            <h2 class="text-red">Un-Authorized Role access</h2>
            <div class="error-content">
              <h3><i class="fa fa-warning text-red"></i> Error! You are not Authorized to view this page.</h3>
              <p>
                Please raise an access request to have access.
                Click here <a href="@Url.Action("UserRegistration", "User")">  to request Access</a> .
              </p>
            </div>
          </div><!-- /.error-page -->

          <div class="error-page">
          <h2 class="text-green">Your Current accessible Role is : @SessionUSer.ROLE_DESC role.</h2>
          <a href="@Url.Action("UserLogin", "User")"> Go to Login</a>
          </div>


        </section><!-- /.content -->
